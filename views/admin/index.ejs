<!DOCTYPE html>
<html>
<head>
	<title>Connexion administrateur</title>
	<% include ./header %>
	<link rel="stylesheet" type="text/css" href="./stylesheets/admin/index.css">
</head>
<body>
	<div id="wrap">
		<div class="container">
	    	<div class="row">
				<div class="col-md-4 col-md-offset-4">
	    			<div class="panel panel-default">
				  		<div class="panel-heading">
				    		<h3 class="panel-title">Connectez-vous</h3>
				 		</div>
				  		<div class="panel-body">
				    		<form accept-charset="UTF-8" role="form" action="/admin" method="POST">
	                    		<fieldset>
				    	  			<div class="form-group">
				    		    		<input class="form-control" placeholder="Identifiant" name="username" type="text" required="">
				    				</div>
				    				<div class="form-group">
				    					<input class="form-control" placeholder="Mot de passe" name="password" type="password" value="" required="">
				    				</div>
				    				<input class="btn btn-lg btn-success btn-block" type="submit" value="Se connecter">
				    			</fieldset>
				      		</form>
				    	</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% include ./footer %>
</body>
</html>